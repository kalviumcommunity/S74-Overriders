generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String?
  projects  Project[]
  createdAt DateTime  @default(now())
}





model Project {
  id        Int       @id @default(autoincrement())
  name      String
  userId    Int
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks     Task[]
  createdAt DateTime  @default(now())
}

model Task {
  id        Int       @id @default(autoincrement())
  title     String
  status    TaskStatus
  projectId Int
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}
